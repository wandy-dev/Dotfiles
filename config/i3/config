###### BASIC DEFINITIONS ######
set $mod Mod4
set $term st
gaps inner 20
gaps outer 15
font pango:monospace 8
floating_modifier $mod
set $displayMode "Set display mode [w]ork [l]aptop [s]reenshare"
set $lightMode "lights [l]iving room [k]itchen"

###### COLORS ######
client.focused           $rd     $rd     $rd  $rd       $rd
